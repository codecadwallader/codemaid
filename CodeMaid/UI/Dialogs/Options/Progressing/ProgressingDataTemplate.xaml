<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:properties="clr-namespace:SteveCadwallader.CodeMaid.Properties"
        xmlns:local="clr-namespace:SteveCadwallader.CodeMaid.UI.Dialogs.Options.Progressing">
    <DataTemplate DataType="{x:Type local:ProgressingViewModel}">
        <StackPanel>
            <GroupBox Header="{x:Static properties:Resources.BuildProgressWindow}">
                <StackPanel>
                    <CheckBox Content="{x:Static properties:Resources.ShowBuildProgressWindowWhenABuildStarts}" IsChecked="{Binding ShowBuildProgressOnBuildStart}" />
                    <CheckBox Content="{x:Static properties:Resources.HideBuildProgressWindowWhenABuildStops}" IsChecked="{Binding HideBuildProgressOnBuildStop}" />
                </StackPanel>
            </GroupBox>

            <GroupBox Header="{x:Static properties:Resources.WindowsTaskbar}">
                <CheckBox Content="{x:Static properties:Resources.ShowBuildProgressOnVisualStudioIconInWindowsTaskbar}" IsChecked="{Binding ShowProgressOnWindowsTaskbar}" />
            </GroupBox>
        </StackPanel>
    </DataTemplate>
</ResourceDictionary>