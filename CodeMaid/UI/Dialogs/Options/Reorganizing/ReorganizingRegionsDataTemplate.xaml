<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:SteveCadwallader.CodeMaid.UI.Dialogs.Options.Reorganizing">
    <DataTemplate DataType="{x:Type local:ReorganizingRegionsViewModel}">
        <StackPanel>
            <CheckBox Content="Automatically generate regions" IsChecked="{Binding AutoGenerate}" />

            <CheckBox Content="Include access level in regions" IsChecked="{Binding IncludeAccessLevel}" IsEnabled="{Binding AutoGenerate}" />
            <TextBlock Text="Ex: #region Public Methods, #region Private Methods" Margin="35,0,5,10" />

            <CheckBox Content="Insert regions even if they are empty" IsChecked="{Binding InsertEvenIfEmpty}" IsEnabled="{Binding AutoGenerate}" />
            <CheckBox Content="Remove existing regions" IsChecked="{Binding RemoveExistingRegions}" IsEnabled="{Binding AutoGenerate}" />
        </StackPanel>
    </DataTemplate>
</ResourceDictionary>