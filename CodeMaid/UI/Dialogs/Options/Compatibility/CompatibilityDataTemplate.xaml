<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:SteveCadwallader.CodeMaid.UI.Dialogs.Options.Compatibility"
        xmlns:cnv="clr-namespace:SteveCadwallader.CodeMaid.UI.Converters">
    <DataTemplate DataType="{x:Type local:CompatibilityViewModel}">
        <StackPanel>
            <GroupBox Header="ReSharper">
                <StackPanel>
                    <CheckBox Content="Run ReSharper silent cleanup when cleaning files" IsChecked="{Binding UseReSharperSilentCleanup}"  IsEnabled="{Binding UseReSharperSilentCleanupEnabled}" />
                </StackPanel>
            </GroupBox>
        </StackPanel>
    </DataTemplate>
</ResourceDictionary>