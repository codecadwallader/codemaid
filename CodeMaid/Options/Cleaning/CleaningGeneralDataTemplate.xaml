<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:SteveCadwallader.CodeMaid.Options.Cleaning">
    <DataTemplate DataType="{x:Type local:CleaningGeneralViewModel}">
        <StackPanel>
            <CheckBox Content="Automatically run cleanup on file save" IsChecked="{Binding AutoCleanupOnFileSave}" />
            <CheckBox Content="Automatically save and close documents opened by cleanup"
                    IsChecked="{Binding AutoSaveAndCloseIfOpenedByCleanup}" />
        </StackPanel>
    </DataTemplate>
</ResourceDictionary>