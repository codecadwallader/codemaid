<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:SteveCadwallader.CodeMaid.Options.Switching"
        xmlns:cnv="clr-namespace:SteveCadwallader.CodeMaid.Converters">
    <DataTemplate DataType="{x:Type local:SwitchingViewModel}">
        <StackPanel>
            <TextBlock Text="Sets of related file extensions (ex: .cpp .h)" Margin="5,5,5,0" />
            <TextBox AcceptsReturn="True" Height="125"
                    Text="{Binding RelatedFileExtensionsExpression, Converter={x:Static cnv:StringReplaceConverter.DoublePipeToNewLine}}"
                    VerticalScrollBarVisibility="Auto" />
            <TextBlock FontStyle="Italic" Text="Place each set on a separate line" />
        </StackPanel>
    </DataTemplate>
</ResourceDictionary>