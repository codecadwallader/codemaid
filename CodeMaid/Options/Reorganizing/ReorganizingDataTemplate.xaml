<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:SteveCadwallader.CodeMaid.Options.Reorganizing">
    <DataTemplate DataType="{x:Type local:ReorganizingViewModel}">
        <StackPanel>
            <CheckBox Content="Run reorganize at start of cleanup" IsChecked="{Binding RunAtStartOfCleanup}" />
            <CheckBox Content="Alphabetize members of the same group"
                    IsChecked="{Binding AlphabetizeMembersOfTheSameGroup}" />
        </StackPanel>
    </DataTemplate>
</ResourceDictionary>